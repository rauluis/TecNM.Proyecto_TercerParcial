@page
@model TecNM.Proyecto.WebSite.Pages.OrderDetails.ListModel

<div class="container" style="margin-bottom: 50px;">
    <div class="row">
        <div class="col-md-10 mt-10">
            <!-- Contenido del primer div -->
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 mb-10">
            <!-- Contenido del segundo div -->
        </div>
    </div>
</div>
<div class="container-fluid">
    <form method="get">
        <div class="row">
            <div class="col-md-8"></div>
            <div class="col-md-4">
                <br/>
                <a asp-page=".\Edit" class="btn btn-success">Agregar nuevo</a>
            </div>
        </div>
    </form>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <table class="table">
                <tr>
                    <th>IdOrder</th>
                    <th>IdProduct</th>
                    <th>Quantity</th>

                    <th></th>
                </tr>
                @foreach (var OrderDetails in @Model.OrderDetails)
                {
                    <tr>
                        <td>@OrderDetails.idOrder</td>
                        <td>@OrderDetails.idProduct</td>
                        <td>@OrderDetails.Quantity</td>
                                                
                        <td>
                            <a a-asp-area="" asp-page="/OrderDetails/Edit" asp-route-id="@OrderDetails.Id"
                               class="btn btn-primary" role="button">Editar</a>
                            <a a-asp-area="" asp-page="/OrderDetails/Delete" asp-route-id="@OrderDetails.Id"
                               class="btn btn-danger" role="button">Borrar</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>

<div class="container" style="margin-bottom: 100px;">
    <div class="row">
        <div class="col-md-10 mt-10">
            <!-- Contenido del primer div -->
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 mb-10">
            <!-- Contenido del segundo div -->
        </div>
    </div>
</div>