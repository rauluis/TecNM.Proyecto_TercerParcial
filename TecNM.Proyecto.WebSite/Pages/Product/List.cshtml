@page
@model TecNM.Proyecto.WebSite.Pages.Product.ListModel
<div class="container" style="margin-bottom: 50px;">
    <div class="row">
        <div class="col-md-10 mt-10">
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 mb-10">
        </div>
    </div>
</div>
<div class="container-fluid">
    <form method="get">
        <div class="row">
            <div class="col-md-8"></div>
            <div class="col-md-4">
                <br/>
                <a asp-page=".\Edit" class="btn btn-success">Agregar nuevo</a>
            </div>
        </div>
    </form>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <table class="table">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Image</th>
                    <th>Stock</th>

                    <th></th>
                </tr>
                @foreach (var Product in @Model.Product)
                {
                    <tr>
                        <td>@Product.Name</td>
                        <td>@Product.Description</td>
                        <td>@Product.Price</td>
                        <td><img src="@Product.Image" alt="" style="max-width: 30%; height: auto;"></td>
                        <td>@Product.Stock</td>



                        <td>
                            <a a-asp-area="" asp-page="/Product/Edit" asp-route-id="@Product.Id"
                               class="btn btn-primary" role="button">
                                Editar
                            </a>
                            <a a-asp-area="" asp-page="/Product/Delete" asp-route-id="@Product.Id"
                               class="btn btn-danger" role="button">
                                Borrar
                            </a>
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>


<div class="container" style="margin-bottom: 100px;">
    <div class="row">
        <div class="col-md-10 mt-10">
            <!-- Contenido del primer div -->
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 mb-10">
            <!-- Contenido del segundo div -->
        </div>
    </div>
</div>