@page
@model TecNM.Proyecto.WebSite.Pages.Catalog.store

<div class="hero-bread" style="position: relative;">
    <img alt="" src="~/img/images/about.jpg" style="width: 100%; max-height: 400px; object-fit: cover;">
    <div class="container" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-0" style="background-color: #fff;,font-weight: 800;,color: #000000;,font-size: 30px;,font-family:Open Sans;,Arial, sans-serif;,letter-spacing: 3px;,text-transform: uppercase;">Store</h1>
            </div>
        </div>
    </div>
</div>


<section class="ftco-section bg-light">

<div class="container">
<div class="row">
<div class="col-md-8 col-lg-10 order-md-last">
<h1 id="Sueter">Sueteres</h1>
<div class="row">
    @foreach (var Product in @Model.Product.Where(p => p.IdCategory == 13))
    {
        <div class="col-sm-12 col-md-12 col-lg-4 ftco-animate d-flex">
            <div class="product d-flex flex-column">
                <a href="#" class="img-prod">
                    <img class="img-fluid" src="@Product.Image" alt="Colorlib Template">
                    <div class=""></div>
                </a>
                <div class="text py-3 pb-4 px-3">
                    <div class="d-flex">
                        <div class="cat">
                            <span>@Product.Description</span>
                        </div>
                        <div class="rating">
                            <p class="text-right mb-0">
                                <a>stock:@Product.Stock</a>
                            </p>
                        </div>
                    </div>
                    <h3>
                        <a href="#">
                            @Product.Name
                        </a>
                    </h3>
                    <div class="pricing">
                        <p class="price">
                            <span>$@Product.Price</span>
                        </p>
                    </div>
                    <p class="bottom-area d-flex px-3">
                        <a href="#" class="add-to-cart text-center py-2 mr-1">
                            <span>Agregar al Carrito<i class="ion-ios-add ml-1"></i></span>
                        </a>
                        
                    </p>
                </div>
            </div>
        </div>
    }

</div>

